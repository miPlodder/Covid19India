<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:orientation="vertical"
    tools:context=".activity.LinksActivity">

    <TextView
        android:id="@+id/tvHelplineNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="HELPLINE NUMBERS [BY STATE]" />

    <TextView
        android:id="@+id/tvMohfwSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MINISTRY OF HEALTH AND FAMILY WELFARE, GOV. OF INDIA" />

    <TextView
        android:id="@+id/tvWhoSite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WHO : COVID-19 HOME PAGE" />

    <TextView
        android:id="@+id/tvCdcLink"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CDC" />

    <TextView
        android:id="@+id/tvGlobalTracker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="COVID-19 GLOBAL TRACKER" />

</LinearLayout>